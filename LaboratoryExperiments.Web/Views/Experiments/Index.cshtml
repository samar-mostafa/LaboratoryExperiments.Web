@model IEnumerable<ExperimentViewModel>

   
@section Styles {
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between">
        <h1 class="mt-4">Experiments</h1>
        <div class="mt-4">
            <a id="btn"  class="btn btn-primary " asp-action="Create">Add Experiment</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <table class="table table-striped table-hover" id="experimentTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Unit</th>
                        <th>Inffleunt Value</th>
                        <th>Effleunt Value</th>
                        <th>Experiment Type</th>
                        <th>Actions</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Unit</td>
                            <td>@(item.InffleuntValueTo != null ? item.InffleuntValue + "-" + item.InffleuntValueTo : item.InffleuntValue)  </td>
                            <td> @(item.EffleuntValueTo != null ? item.EffleuntValue + "-" + item.EffleuntValueTo : item.EffleuntValue)</td>
                            <td>@item.ExperimentType</td>
                           
                            <td>
                                <div class="menu-item px-3 js-Delete"
                                     data-url="/Experiments/Delete/@item.Id">
                                    <a class="btn btn-danger js-render-modal">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Plugins {

    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
}
@section Scripts {
   
    <script>
        $(document).ready(function () {
            let table = new DataTable('#experimentTable')
        })
    </script>
}