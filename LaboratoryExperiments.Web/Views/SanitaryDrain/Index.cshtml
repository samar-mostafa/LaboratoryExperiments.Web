@model IEnumerable<LaboratoryExperiments.Web.Data.ViewModels.BranchViewModel>
@section Styles {
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}
<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between">
        <h1 class="mt-4">Sanitary Drain</h1>
        <div class="mt-4">
            <a id="btn" href="javascript:;" class="btn btn-primary js-model-render"
               data-title="Add Sanitary Drain" data-url="/SanitaryDrain/Create">Add Sanitary Drain</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <table class="table table-striped table-hover" id="SanitaryDrainTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Stations</th>
                        <th>Actions</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                @foreach (var station in item.Stations)
                                {
                                    <span>@station  </span>
                                }
                            </td>
                            <td>
                                <div class="menu-item px-3 js-Delete"
                                     data-url="/SanitaryDrain/Delete/@item.Id">
                                    <a class="btn btn-danger js-render-modal">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Plugins {

    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            let table = new DataTable('#SanitaryDrainTable')
        })
       
    </script>
}